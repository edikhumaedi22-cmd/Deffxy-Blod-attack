  <script>
    // Simple interactivity for the demo page
    (function(){
      const mini = document.querySelectorAll('.mini');
      const bugSelect = document.getElementById('bug');
      mini.forEach(el=>{
        el.addEventListener('click', ()=>{
          const map = {
            delay: 1,
            blank: 2,
            crash: 0
          };
          const idx = map[el.dataset.value] ?? 0;
          bugSelect.selectedIndex = idx;
          // visual feedback
          el.animate([{transform:'translateY(0)'},{transform:'translateY(-4px)'}],{duration:120,fill:'forwards',direction:'alternate'});
        });
      });

      const sendBtn = document.getElementById('sendBtn');
      const phone = document.getElementById('phone');
      const modal = document.getElementById('modal');
      const okBtn = document.getElementById('okBtn');

      function showModal(){
        modal.style.display = 'flex';
        modal.setAttribute('aria-hidden','false');
      }
      function hideModal(){
        modal.style.display = 'none';
        modal.setAttribute('aria-hidden','true');
      }

      sendBtn.addEventListener('click', ()=>{
        // validation only for demo (not sending anything)
        const val = phone.value.trim();
        if(val === ''){
          alert('Masukkan nomor target (hanya untuk demo).');
          phone.focus();
          return;
        }
        // show a modal/demo confirmation
        showModal();
      });

      okBtn.addEventListener('click', hideModal);
      // close modal on backdrop click
      modal.addEventListener('click', (e)=>{
        if(e.target === modal) hideModal();
      });

      // accessibility: close modal with Esc
      window.addEventListener('keydown', (e)=>{
        if(e.key === 'Escape') hideModal();
      });
    })();
  </script>
